<Window x:Class="RadCheck.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadCheck" xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">

    <Grid Margin="10">
        <!-- 顶部标题栏 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.Row="0">
            <!--<Image Source="/Resources/logo.png" Height="40" Width="40" Margin="5"/>-->
            <TextBlock Text="辐射剂量率监测系统" FontSize="24" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0" VerticalAlignment="Center" Width="300">
                <TextBlock Text="当前用户:" Margin="0,0,5,0"/>
                <TextBlock Text="管理员" FontWeight="Bold"/>
                <Button Content="修改密码" Margin="10,0,0,0" 
                        Style="{StaticResource SmallButtonStyle}"/>
                <Button Content="退出登录" Margin="10,0,0,0"
                        Style="{StaticResource SmallButtonStyle}"/>
            </StackPanel>
        </StackPanel>

        <!-- 主内容区域 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：6个探头数据显示 -->
            <Grid Grid.Column="0" Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="探头实时数据" FontSize="16" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10"/>

                <WrapPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Stretch">
                    <!-- 探头1 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10" Background="White" Width="250">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="探头 1" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="正常" Foreground="Green" Margin="10,0,0,0" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="剂量率：0.12 μSv/h" FontSize="18" Margin="0,5,0,0" Foreground="#2C3E50"/>
                            <TextBlock Text="序列号：DOS-2023-001" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                            <ProgressBar Value="12" Maximum="100" Height="8" Margin="0,5,0,0" Background="#ECF0F1">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#2ECC71" Offset="0"/>
                                        <GradientStop Color="#27AE60" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>
                    </Border>

                    <!-- 探头2 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10" Background="White" Width="250">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="探头 2" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="正常" Foreground="Green" Margin="10,0,0,0" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="剂量率：0.08 μSv/h" FontSize="18" Margin="0,5,0,0" Foreground="#2C3E50"/>
                            <TextBlock Text="序列号：DOS-2023-002" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                            <ProgressBar Value="8" Maximum="100" Height="8" Margin="0,5,0,0" Background="#ECF0F1">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#2ECC71" Offset="0"/>
                                        <GradientStop Color="#27AE60" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>
                    </Border>

                    <!-- 探头3 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10" Background="White" Width="250">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="探头 3" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="正常" Foreground="Green" Margin="10,0,0,0" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="剂量率：0.15 μSv/h" FontSize="18" Margin="0,5,0,0" Foreground="#2C3E50"/>
                            <TextBlock Text="序列号：DOS-2023-003" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                            <ProgressBar Value="15" Maximum="100" Height="8" Margin="0,5,0,0" Background="#ECF0F1">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#2ECC71" Offset="0"/>
                                        <GradientStop Color="#27AE60" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>
                    </Border>

                    <!-- 探头4 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10" Background="White" Width="250">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="探头 4" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="注意" Foreground="#F39C12" Margin="10,0,0,0" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="剂量率：0.35 μSv/h" FontSize="18" Margin="0,5,0,0" Foreground="#2C3E50"/>
                            <TextBlock Text="序列号：DOS-2023-004" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                            <ProgressBar Value="35" Maximum="100" Height="8" Margin="0,5,0,0" Background="#ECF0F1">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#F39C12" Offset="0"/>
                                        <GradientStop Color="#E67E22" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>
                    </Border>

                    <!-- 探头5 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10" Background="White" Width="250">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="探头 5" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="正常" Foreground="Green" Margin="10,0,0,0" FontSize="12"/>
                            </StackPanel>
                            <TextBlock Text="剂量率：0.09 μSv/h" FontSize="18" Margin="0,5,0,0" Foreground="#2C3E50"/>
                            <TextBlock Text="序列号：DOS-2023-005" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                            <ProgressBar Value="9" Maximum="100" Height="8" Margin="0,5,0,0" Background="#ECF0F1">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#2ECC71" Offset="0"/>
                                        <GradientStop Color="#27AE60" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>
                    </Border>

                    <!-- 探头6 -->
                    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10" Background="White" Width="250">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="探头 6" FontSize="14" FontWeight="Bold"/>
                                <TextBlock Text="报警" Foreground="Red" Margin="10,0,0,0" FontSize="12" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBlock Text="剂量率：0.65 μSv/h" FontSize="18" Margin="0,5,0,0" Foreground="Red"/>
                            <TextBlock Text="序列号：DOS-2023-006" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                            <ProgressBar Value="65" Maximum="100" Height="8" Margin="0,5,0,0" Background="#ECF0F1">
                                <ProgressBar.Foreground>
                                    <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                        <GradientStop Color="#E74C3C" Offset="0"/>
                                        <GradientStop Color="#C0392B" Offset="1"/>
                                    </LinearGradientBrush>
                                </ProgressBar.Foreground>
                            </ProgressBar>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </Grid>

            <!-- 右侧：图表和数据录入 -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 上部：数据图表 -->
                <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,0,0,10" Padding="10" Background="White" Grid.Row="0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="剂量率趋势图" FontSize="16" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0" Width="300">
                                <TextBlock Text="时间范围：" VerticalAlignment="Center"/>
                                <ComboBox SelectedIndex="0" Width="100" Margin="5,0,0,0">
                                    <ComboBoxItem Content="1小时"/>
                                    <ComboBoxItem Content="24小时"/>
                                    <ComboBoxItem Content="7天"/>
                                    <ComboBoxItem Content="30天"/>
                                </ComboBox>
                                <Button Content="刷新" Margin="10,0,0,0" Style="{StaticResource SmallButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 简化的图表 -->
                        <oxy:PlotView Model="{Binding PlotModel}" Height="300"/>

                        <!-- 图例 -->
                        <StackPanel Orientation="Horizontal" Margin="20,10,0,0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="10" Height="10" Fill="#3498DB" Margin="0,0,5,0"/>
                                <TextBlock Text="探头 1"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="10" Height="10" Fill="#9B59B6" Margin="0,0,5,0"/>
                                <TextBlock Text="探头 2"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="10" Height="10" Fill="#1ABC9C" Margin="0,0,5,0"/>
                                <TextBlock Text="探头 3"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="10" Height="10" Fill="#F1C40F" Margin="0,0,5,0"/>
                                <TextBlock Text="探头 4"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="10" Height="10" Fill="#E67E22" Margin="0,0,5,0"/>
                                <TextBlock Text="探头 5"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                                <Rectangle Width="10" Height="10" Fill="#E74C3C" Margin="0,0,5,0"/>
                                <TextBlock Text="探头 6"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 下部：数据录入和系统设置 -->
                <TabControl Grid.Row="1">
                    <TabItem Header="测量数据录入">
                        <Border BorderThickness="0" Padding="10" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="桶号：" Grid.Row="0" Grid.Column="0" Margin="0,10,0,0" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Margin="0,10,0,0"/>

                                <TextBlock Text="测量日期：" Grid.Row="0" Grid.Column="2" Margin="0,10,0,0" VerticalAlignment="Center"/>
                                <DatePicker Grid.Row="0" Grid.Column="3" Margin="0,10,0,0"/>

                                <TextBlock Text="测量人：" Grid.Row="1" Grid.Column="0" Margin="0,10,0,0" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,0"/>

                                <TextBlock Text="测量单位：" Grid.Row="1" Grid.Column="2" Margin="0,10,0,0" VerticalAlignment="Center"/>
                                <ComboBox Grid.Row="1" Grid.Column="3" Margin="0,10,0,0" SelectedIndex="0">
                                    <ComboBoxItem Content="μSv/h"/>
                                    <ComboBoxItem Content="mSv/h"/>
                                </ComboBox>

                                <TextBlock Text="备注信息：" Grid.Row="2" Grid.Column="0" Margin="0,10,0,0" VerticalAlignment="Top"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,10,0,0" Height="80" AcceptsReturn="True"/>

                                <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="4" HorizontalAlignment="Right" Margin="0,20,0,10">
                                    <Button Content="保存数据" Width="100" Margin="0,0,10,0" Style="{StaticResource PrimaryButtonStyle}"/>
                                    <Button Content="打印报告" Width="100" Margin="0,0,10,0" Style="{StaticResource SecondaryButtonStyle}"/>
                                    <Button Content="清空" Width="100" Style="{StaticResource SecondaryButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>

                    <TabItem Header="系统设置">
                        <Border BorderThickness="0" Padding="10" Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="数据上传频率：" Grid.Row="0" Margin="0,10,0,0" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Margin="0,10,0,0">
                                    <Slider Minimum="1" Maximum="60" Value="10" Width="200" TickFrequency="1" IsSnapToTickEnabled="True"/>
                                    <TextBlock Text="10 秒/次" Margin="10,0,0,0" VerticalAlignment="Center" Width="60"/>
                                </StackPanel>

                                <TextBlock Text="服务器地址：" Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,10,0,0" Text="http://192.168.1.100:8080"/>

                                <TextBlock Text="报警阈值设置：" Grid.Row="2" Margin="0,10,0,0" VerticalAlignment="Center"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Margin="0,10,0,0" Text="0.5 μSv/h"/>

                                <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,20,0,10">
                                    <Button Content="保存设置" Width="100" Margin="0,0,10,0" Style="{StaticResource PrimaryButtonStyle}"/>
                                    <Button Content="恢复默认" Width="100" Style="{StaticResource SecondaryButtonStyle}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </TabItem>

                    <TabItem Header="数据查询">
                        <Border BorderThickness="0" Padding="10" Background="White">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <TextBlock Text="查询日期：" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                    <DatePicker Width="150"/>
                                    <TextBlock Text="至" Margin="10,0,10,0" VerticalAlignment="Center"/>
                                    <DatePicker Width="150"/>
                                    <Button Content="查询" Margin="10,0,0,0" Style="{StaticResource SmallButtonStyle}"/>
                                </StackPanel>

                                <DataGrid AutoGenerateColumns="False" Height="200">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="时间" Width="120"/>
                                        <DataGridTextColumn Header="桶号" Width="80"/>
                                        <DataGridTextColumn Header="探头1" Width="80"/>
                                        <DataGridTextColumn Header="探头2" Width="80"/>
                                        <DataGridTextColumn Header="探头3" Width="80"/>
                                        <DataGridTextColumn Header="探头4" Width="80"/>
                                        <DataGridTextColumn Header="探头5" Width="80"/>
                                        <DataGridTextColumn Header="探头6" Width="80"/>
                                        <DataGridTextColumn Header="测量人" Width="80"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                    <Button Content="导出数据" Style="{StaticResource SecondaryButtonStyle}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <!-- 底部状态栏 -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,10,0,0" Height="30">
            <TextBlock Text="系统状态：运行中" Foreground="Green" VerticalAlignment="Center"/>
            <TextBlock Text=" | " Margin="5,0,5,0" VerticalAlignment="Center"/>
            <TextBlock Text="上次同步时间：2023-07-20 14:30:25" VerticalAlignment="Center"/>
            <TextBlock Text=" | " Margin="5,0,5,0" VerticalAlignment="Center"/>
            <TextBlock Text="当前时间：2023-07-20 14:35:10" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,20,0"/>
        </StackPanel>
    </Grid>
</Window>
