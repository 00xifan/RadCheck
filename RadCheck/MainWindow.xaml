<Window x:Class="RadCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1000">
    <Window.Resources>

    </Window.Resources>

    <Grid Background="DarkBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="{StaticResource MainBlue}">
            <TextBlock Text="&#xe615;" FontSize="30" FontWeight="ExtraBold" Foreground="White" Margin="10 0" Style="{StaticResource UserIconKey}"/>
            <TextBlock Text="放射性废物袋测量系统" FontSize="30" Foreground="{StaticResource TextWhite}" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Orientation="Horizontal" Margin="0,10,10,0">
                <!-- 头像按钮 -->
                <Button x:Name="UserAvatarButton" 
                        Width="32" Height="32" 
                        Style="{StaticResource TransparentButtonStyle}"
                        Click="UserAvatarButton_Click">
                    <Grid>
                        <Ellipse Width="28" Height="28" Fill="White" Stroke="#4eB0FA" StrokeThickness="1"/>

                        <TextBlock Text="&#xe643;" 
                                       FontSize="20"
                                       Foreground="#4eB0FA"
                                       Style="{StaticResource UserIconKey}"/>
                        <Ellipse Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Stroke="#E0E0E0" StrokeThickness="1" Fill="LimeGreen" Margin="0,0,1,0"/>

                    </Grid>
                </Button>
            </StackPanel>

            <!-- 用户菜单 -->
            <Popup x:Name="UserMenuPopup" 
                   Placement="Bottom" 
                   PlacementTarget="{Binding ElementName=UserAvatarButton}"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Slide">
                <Popup.Resources>
                    <Storyboard x:Key="OpenMenuAnimation">
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.15"/>
                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                           From="0,10,0,0" To="0,0,0,0" Duration="0:0:0.15"/>
                    </Storyboard>
                </Popup.Resources>
                <Border Width="320" Background="{DynamicResource MenuBackgroundBrush}"
                    CornerRadius="4" 
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MenuBorderBrush}"
                    Effect="{StaticResource MenuDropShadow}"
                    Margin="0,10,0,0" Opacity="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 用户信息 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Grid Margin="10 0">
                                <Ellipse Width="25" Height="25" Fill="White" Stroke="#4eB0FA" StrokeThickness="1"/>
                                <TextBlock Text="&#xe643;" 
                                           FontSize="20"
                                           Foreground="#4eB0FA"
                                           Style="{StaticResource UserIconKey}"/>
                            </Grid>
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="用户名" FontWeight="Bold"/>
                                <TextBlock Text="user@example.com" Opacity="0.8" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 菜单项 -->
                        <StackPanel Grid.Row="1">
                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe66a;"
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="管理个人资料" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe600;" FontSize="17" Margin="-2 0 0 0"
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="设置" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe603;" FontSize="14"
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="历史记录" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe601;" FontSize="18" Margin="0 0 -2 0"
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="下载" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>


                        </StackPanel>

                        <!-- 底部退出按钮 -->
                        <Border Grid.Row="3" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe604;" FontSize="15" Margin="3 0 0 0"
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="退出" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </Grid>
                </Border>
            </Popup>

        </StackPanel>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>



                <Grid Grid.Column="0">
                    <Border Background="#0744ae" CornerRadius="10" SnapsToDevicePixels="False">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#66003366" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="表面污染探测器 &#x0A; — 底" Foreground="White" FontFamily="Arial Black" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <Image Source="/Assets/Images/probe.png" Width="40" Height="40" Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1" Margin="10 3" Height="60">
                    <DataGrid x:Name="DetectorLowDataGrid"
                              Style="{StaticResource CommonDataGridStyle}"
                              ItemsSource="{Binding DetectorLowData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="0°" Width="*" Binding="{Binding Angle0, StringFormat=F2}"/>
                            <DataGridTextColumn Header="60°" Width="*" Binding="{Binding Angle60, StringFormat=F2}"/>
                            <DataGridTextColumn Header="120°" Width="*" Binding="{Binding Angle120, StringFormat=F2}"/>
                            <DataGridTextColumn Header="180°" Width="*" Binding="{Binding Angle180, StringFormat=F2}"/>
                            <DataGridTextColumn Header="240°" Width="*" Binding="{Binding Angle240, StringFormat=F2}"/>
                            <DataGridTextColumn Header="300°" Width="*" Binding="{Binding Angle300, StringFormat=F2}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <Grid Grid.Row="2" Grid.Column="0">
                    <Border Background="#0744ae" CornerRadius="10" SnapsToDevicePixels="False">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#66003366" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="表面污染探测器 &#x0A; — 中" Foreground="White" FontFamily="Arial Black" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <Image Source="/Assets/Images/probe.png" Width="40" Height="40" Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2" Grid.Column="1" Margin="10 3" Height="60">
                    <DataGrid x:Name="DetectorMediumDataGrid"
                              Style="{StaticResource CommonDataGridStyle}"
                              ItemsSource="{Binding DetectorMediumData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="0°" Width="*" Binding="{Binding Angle0, StringFormat=F2}"/>
                            <DataGridTextColumn Header="60°" Width="*" Binding="{Binding Angle60, StringFormat=F2}"/>
                            <DataGridTextColumn Header="120°" Width="*" Binding="{Binding Angle120, StringFormat=F2}"/>
                            <DataGridTextColumn Header="180°" Width="*" Binding="{Binding Angle180, StringFormat=F2}"/>
                            <DataGridTextColumn Header="240°" Width="*" Binding="{Binding Angle240, StringFormat=F2}"/>
                            <DataGridTextColumn Header="300°" Width="*" Binding="{Binding Angle300, StringFormat=F2}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <Grid Grid.Row="4" Grid.Column="0">
                    <Border Background="#0744ae" CornerRadius="10" SnapsToDevicePixels="False">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#66003366" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="表面污染探测器 &#x0A; — 高" Foreground="White" FontFamily="Arial Black" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <Image Source="/Assets/Images/probe.png" Width="40" Height="40" Margin="0,0,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="4" Grid.Column="1" Margin="10 3" Height="60">
                    <DataGrid x:Name="DetectorHeightDataGrid"
                 Style="{StaticResource CommonDataGridStyle}"
                 ItemsSource="{Binding DetectorHighData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="0°" Width="*" Binding="{Binding Angle0, StringFormat=F2}"/>
                            <DataGridTextColumn Header="60°" Width="*" Binding="{Binding Angle60, StringFormat=F2}"/>
                            <DataGridTextColumn Header="120°" Width="*" Binding="{Binding Angle120, StringFormat=F2}"/>
                            <DataGridTextColumn Header="180°" Width="*" Binding="{Binding Angle180, StringFormat=F2}"/>
                            <DataGridTextColumn Header="240°" Width="*" Binding="{Binding Angle240, StringFormat=F2}"/>
                            <DataGridTextColumn Header="300°" Width="*" Binding="{Binding Angle300, StringFormat=F2}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <Grid Grid.Row="6" Grid.Column="0">
                    <Border Background="#0744ae" CornerRadius="10" SnapsToDevicePixels="False">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#66003366" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel Orientation="Horizontal" Margin="10" VerticalAlignment="Center">
                        <TextBlock Text="伽马探头" Foreground="White" FontFamily="Arial Black" FontSize="18" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        <Image Source="/Assets/Images/probe.png" Width="40" Height="40" Margin="0,0,0,0"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="6" Grid.Column="1" Margin="10 3" Height="60">
                    <DataGrid x:Name="DetectorGammaDataGrid"
                              Style="{StaticResource CommonDataGridStyle}"
                              ItemsSource="{Binding DetectorGammaData}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="0°" Width="*" Binding="{Binding Angle0, StringFormat=F2}"/>
                            <DataGridTextColumn Header="60°" Width="*" Binding="{Binding Angle60, StringFormat=F2}"/>
                            <DataGridTextColumn Header="120°" Width="*" Binding="{Binding Angle120, StringFormat=F2}"/>
                            <DataGridTextColumn Header="180°" Width="*" Binding="{Binding Angle180, StringFormat=F2}"/>
                            <DataGridTextColumn Header="240°" Width="*" Binding="{Binding Angle240, StringFormat=F2}"/>
                            <DataGridTextColumn Header="300°" Width="*" Binding="{Binding Angle300, StringFormat=F2}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </Grid>

            <!-- 右侧：最大值与报警阈值区 -->
            <Grid Grid.Column="1" Margin="15,5,10,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- 表污探头最大值面板 -->
                <Grid>
                    <Border Background="{StaticResource MainBlue}" CornerRadius="10" SnapsToDevicePixels="False">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#66003366" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                        <TextBlock Text="表污探头最大数据" Foreground="{StaticResource TextWhite}" FontSize="20" FontFamily="Arial Black" TextAlignment="Center"/>
                        <Rectangle Height="1" Fill="LightBlue" Margin="0 3"/>
                        <TextBlock Text="1000" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextWhite}" TextAlignment="Center" Margin="0 10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <TextBlock Text="报警阈值：" Foreground="WhiteSmoke" FontFamily="Arial" FontSize="20" TextAlignment="Center" Margin="0 2 0 0"/>
                            <TextBlock Text="0.00" Foreground="{StaticResource TextWhite}" FontSize="20" TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- γ探头最大值面板（结构同上） -->
                <Grid Grid.Row="1" Margin="0 10">
                    <Border Background="{StaticResource MainBlue}" CornerRadius="10" SnapsToDevicePixels="False">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#66003366" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                        <TextBlock HorizontalAlignment="Center">
                            <Run Text="γ" Foreground="{StaticResource TextWhite}" FontSize="16" />
                            <Run Text="探头最大数据" Foreground="{StaticResource TextWhite}" FontSize="20" FontFamily="Arial Black"/>
                        </TextBlock>
                        <Rectangle Height="1" Fill="LightBlue" Margin="0 3"/>
                        <TextBlock Text="1000" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextWhite}" TextAlignment="Center" Margin="0 10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                            <TextBlock Text="报警阈值：" Foreground="WhiteSmoke" FontFamily="Arial" FontSize="20" TextAlignment="Center" Margin="0 2 0 0"/>
                            <TextBlock Text="0.00" Foreground="{StaticResource TextWhite}" FontSize="20" TextAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- 控制按钮区（底部居中） -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" >

                <Grid Margin="10">
                    <Border Background="#F0F0F0" SnapsToDevicePixels="False">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Color="#66003366" Opacity="0.6"/>
                        </Border.Effect>
                    </Border>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                        <Button Content="开始测量" Style="{StaticResource ActionButtonStyle}"/>
                        <Button Content="停止测量" Style="{StaticResource ActionQuitButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="100 10">
                    <Border Background="#F0F0F0" SnapsToDevicePixels="True"/>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                        <Button Content="保存数据" Style="{StaticResource ActionButtonStyle}"/>
                        <Button Content="打印标签" Style="{StaticResource ActionQuitButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
