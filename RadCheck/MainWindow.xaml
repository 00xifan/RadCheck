<Window x:Class="RadCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <!-- 主题颜色 -->
        <SolidColorBrush x:Key="MainBlue" Color="#0066CC"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#0A2463"/>
        <SolidColorBrush x:Key="LightBlue" Color="#3E92CC"/>
        <SolidColorBrush x:Key="TextWhite" Color="White"/>
        <SolidColorBrush x:Key="TextLightGray" Color="#CCCCCC"/>

        <!-- 数据表格样式 -->
        <Style TargetType="DataGrid" x:Key="DetectorDataGridStyle">
            <Setter Property="Background" Value="DarkBlue"/>
            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="LightBlue"/>
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="ColumnHeaderHeight" Value="35"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#2A4D69"/>
            <Setter Property="VerticalGridLinesBrush" Value="#2A4D69"/>
        </Style>

        <!-- 按钮样式 -->
        <Style TargetType="Button" x:Key="ActionButtonStyle">
            <Setter Property="Background" Value="LightBlue"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#60A5FA"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E40AF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="DarkBlue">
        <!-- 标题栏 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <!-- 标题栏 -->
            <RowDefinition Height="*"/>
            <!-- 主内容区 -->
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="{StaticResource MainBlue}">
            <Image Source="/Assets/logo.png" Width="24" Height="24" Margin="0,0,10,0"/>
            <TextBlock Text="放射性废物袋测量系统" FontSize="18" Foreground="{StaticResource TextWhite}" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <TextBlock Text="用户名" Foreground="{StaticResource TextLightGray}" Margin="0,0,10,0"/>
                <TextBlock Text="admin" Foreground="{StaticResource TextWhite}" FontWeight="Medium"/>
            </StackPanel>
        </StackPanel>

        <!-- 主内容区 -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <!-- 左侧：探测器数据表格区 -->
                <ColumnDefinition Width="3*"/>
                <!-- 右侧：最大值与报警阈值区 -->
            </Grid.ColumnDefinitions>

            <!-- 左侧：探测器数据表格区 -->
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <!-- 表污探测器一（数据表格） -->
                <DataGrid ItemsSource="{Binding SurfaceDetector1Data}" Style="{StaticResource DetectorDataGridStyle}" Margin="0,5,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="表面污染探测器一" Binding="{Binding DetectorName}" Width="150"/>
                        <DataGridTextColumn Header="0°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="60°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="120°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="180°"  Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="240°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="300°"  Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 表污探测器二、三（结构同上，仅ItemsSource绑定不同ViewModel属性） -->
                
                
                <!-- γ探测器（数据表格） --><!--
                <DataGrid ItemsSource="{Binding GammaDetectorData}" Style="{StaticResource DetectorDataGridStyle}" Margin="0,5,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="γ探头" Binding="{Binding DetectorName}" Width="150"/>
                        --><!-- 角度列同上 --><!--
                    </DataGrid.Columns>
                </DataGrid>-->
            </StackPanel>

            <!-- 右侧：最大值与报警阈值区 -->
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                <!-- 表污探头最大值面板 -->
                <Border Background="DarkBlue" BorderBrush="LightBlue" BorderThickness="1" Margin="0,5,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="表污探头最大数据" Foreground="{StaticResource TextLightGray}" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="SurfaceMaxValue" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextWhite}" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="报警阈值:" Foreground="{StaticResource TextLightGray}"/>
                            <TextBox Text="SurfaceAlarmThreshold" Width="80" Background="#1A3A57" BorderBrush="LightBlue" Foreground="{StaticResource TextWhite}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- γ探头最大值面板（结构同上） -->
                <Border Background="DarkBlue" BorderBrush="LightBlue" BorderThickness="1" Margin="0,10,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="γ探头最大数据" Foreground="{StaticResource TextLightGray}" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="GammaMaxValue" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextWhite}" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="报警阈值:" Foreground="{StaticResource TextLightGray}"/>
                            <TextBox Text="GammaAlarmThreshold" Width="80" Background="#1A3A57" BorderBrush="LightBlue" Foreground="{StaticResource TextWhite}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- 控制按钮区（底部居中） -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                <Button Content="开始测量" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="停止测量" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="保存数据"  Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="打印标签" Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
