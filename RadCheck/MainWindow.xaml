<Window x:Class="RadCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- 表面污染探测器数据显示（3个探头×6个角度） -->
        <Grid Margin="10" Background="#1E1E2E">
            <!-- 表头 -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                <TextBlock Text="表面污染探测器一" Foreground="White" FontSize="14" Width="150"/>
                <TextBlock Text="0°" Foreground="LightGray" Width="50" HorizontalAlignment="Center"/>
                <TextBlock Text="60°" Foreground="LightGray" Width="50" HorizontalAlignment="Center"/>
                <!-- ... 其他角度（120°~300°） ... -->
            </StackPanel>

            <!-- 数据行（动态绑定ViewModel中的ObservableCollection） -->
            <ItemsControl ItemsSource="{Binding SurfaceDetector1DataList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                     
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!-- 控制按钮区 -->
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Content="开始测量" Command="{Binding StartMeasureCommand}" Width="100" Height="30" Background="#0078D7" Foreground="White"/>
            <Button Content="停止测量" Command="{Binding StopMeasureCommand}" Width="100" Height="30" Margin="10,0,0,0" Background="#D70000" Foreground="White"/>
            <Button Content="打印标签" Command="{Binding PrintLabelCommand}" Width="100" Height="30" Margin="10,0,0,0" Background="#00C853" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
