<Window x:Class="RadCheck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RadCheck"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>

    </Window.Resources>

    <Grid Background="DarkBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Background="{StaticResource MainBlue}">
            <TextBlock Text="&#xe615;" FontSize="30" FontWeight="ExtraBold" Foreground="White" Margin="10 0" Style="{StaticResource UserIconKey}"/>
            <TextBlock Text="放射性废物袋测量系统" FontSize="30" Foreground="{StaticResource TextWhite}" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Center"/>

        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">

            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Orientation="Horizontal" Margin="0,10,10,0">
                <!-- 头像按钮 -->
                <Button x:Name="UserAvatarButton" 
                        Width="32" Height="32" 
                        Style="{StaticResource TransparentButtonStyle}"
                        Click="UserAvatarButton_Click">
                    <Grid>
                        <Ellipse Width="28" Height="28" Fill="White" Stroke="#4eB0FA" StrokeThickness="1"/>

                        <TextBlock Text="&#xe643;" 
                                       FontSize="20"
                                       Foreground="#4eB0FA"
                                       Style="{StaticResource UserIconKey}"/>
                        <Ellipse Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                     Stroke="#E0E0E0" StrokeThickness="1" Fill="LimeGreen" Margin="0,0,1,0"/>

                    </Grid>
                </Button>
            </StackPanel>

            <!-- 用户菜单 -->
            <Popup x:Name="UserMenuPopup" 
                   Placement="Bottom" 
                   PlacementTarget="{Binding ElementName=UserAvatarButton}"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Slide">
                <Popup.Resources>
                    <Storyboard x:Key="OpenMenuAnimation">
                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.15"/>
                        <ThicknessAnimation Storyboard.TargetProperty="Margin"
                           From="0,10,0,0" To="0,0,0,0" Duration="0:0:0.15"/>
                    </Storyboard>
                </Popup.Resources>
                <Border Width="320" Background="{DynamicResource MenuBackgroundBrush}"
                    CornerRadius="4" 
                    BorderThickness="1"
                    BorderBrush="{DynamicResource MenuBorderBrush}"
                    Effect="{StaticResource MenuDropShadow}"
                    Margin="0,10,0,0" Opacity="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 用户信息 -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Grid Margin="10 0">
                                <Ellipse Width="25" Height="25" Fill="White" Stroke="#4eB0FA" StrokeThickness="1"/>
                                <TextBlock Text="&#xe643;" 
                                           FontSize="20"
                                           Foreground="#4eB0FA"
                                           Style="{StaticResource UserIconKey}"/>
                            </Grid>
                            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="用户名" FontWeight="Bold"/>
                                <TextBlock Text="user@example.com" Opacity="0.8" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- 菜单项 -->
                        <StackPanel Grid.Row="1">
                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe66a;" 
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="管理个人资料" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe600;" 
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="设置" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe603;" 
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="历史记录" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xe601;" 
                                               Style="{StaticResource UserIconKey}"/>
                                    <TextBlock Text="下载" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>


                        </StackPanel>

                        <!-- 底部退出按钮 -->
                        <Border Grid.Row="3" BorderThickness="0,1,0,0" BorderBrush="#E0E0E0">
                            <Button Style="{StaticResource MenuItemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <!--<Image Source="/Assets/icons/signout.png" Width="16"/>-->
                                    <TextBlock Text="退出" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Border>
                    </Grid>
                </Border>
            </Popup>

        </StackPanel>
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5">
                <!-- 表污探测器一（数据表格） -->
                <DataGrid ItemsSource="{Binding SurfaceDetector1Data}" Margin="0,5,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="表面污染探测器一" Binding="{Binding DetectorName}" Width="150"/>
                        <DataGridTextColumn Header="0°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="60°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="120°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="180°"  Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="240°" Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="300°"  Width="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>gin="10,10,10,1gin="10,10,10,10">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="TextAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 表污探测器二、三（结构同上，仅ItemsSource绑定不同ViewModel属性） -->


                <!-- γ探测器（数据表格） -->
                <!--
                <DataGrid ItemsSource="{Binding GammaDetectorData}" Style="{StaticResource DetectorDataGridStyle}" Margin="0,5,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="γ探头" Binding="{Binding DetectorName}" Width="150"/>
                        -->
                <!-- 角度列同上 -->
                <!--
                    </DataGrid.Columns>
                </DataGrid>-->
            </StackPanel>

            <!-- 右侧：最大值与报警阈值区 -->
            <Grid Grid.Column="1" Margin="15,5,-5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- 表污探头最大值面板 -->
                <Border Grid.Row="0" Background="DarkBlue" BorderBrush="LightBlue" BorderThickness="1" Margin="0,5,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="表污探头最大数据" Foreground="{StaticResource TextLightGray}" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="SurfaceMaxValue" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextWhite}" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="报警阈值:" Foreground="{StaticResource TextLightGray}"/>
                            <TextBox Text="SurfaceAlarmThreshold" Width="80" Background="#1A3A57" BorderBrush="LightBlue" Foreground="{StaticResource TextWhite}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- γ探头最大值面板（结构同上） -->
                <Border Grid.Row="1" Background="DarkBlue" BorderBrush="LightBlue" BorderThickness="1" Margin="0,10,0,0" Padding="10">
                    <StackPanel>
                        <TextBlock Text="γ探头最大数据" Foreground="{StaticResource TextLightGray}" FontSize="14" Margin="0,0,0,10"/>
                        <TextBlock Text="GammaMaxValue" FontSize="36" FontWeight="Bold" Foreground="{StaticResource TextWhite}" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="报警阈值:" Foreground="{StaticResource TextLightGray}"/>
                            <TextBox Text="GammaAlarmThreshold" Width="80" Background="#1A3A57" BorderBrush="LightBlue" Foreground="{StaticResource TextWhite}" Margin="5,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 控制按钮区（底部居中） -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                <Button Content="开始测量" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="停止测量" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="保存数据"  Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="打印标签" Style="{StaticResource ActionButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
